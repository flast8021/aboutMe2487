<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="-1dp"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        tools:context=".education_activity">



        <TextView
            android:id="@+id/copyright"
            android:layout_width="407dp"
            android:layout_height="53dp"
            android:layout_marginTop="97dp"
            android:background="#53789F"
            android:text="&#169; Copyright Usman Zia 2022\nBuilt With Android Studio"
            android:textAlignment="center"
            android:textColor="#adb5bd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:ignore="MissingConstraints,TextContrastCheck" />

        <Button
            android:id="@+id/buttonSkillsII"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="74dp"
            android:backgroundTint="#53789F"

            android:text="Skills"
            app:layout_constraintBottom_toBottomOf="@+id/copyright"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/buttonEducationHome"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="74dp"
            android:backgroundTint="#53789F"
            android:text="Home"
            app:layout_constraintBottom_toBottomOf="@+id/copyright"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/school" />

        <TextView
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/textView6"
            android:layout_width="216dp"
            android:layout_height="183dp"
            android:layout_marginLeft="-22dp"
            android:layout_marginTop="172dp"
            android:background="#66000000"
            android:text="\nThis is my school which i joined in 2010 and also I completed my Matric in science. (March 2016 from Assas National School Rahwali Cantt) which is situated in Gujranwala, Punjab Pakistan.\n"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="230dp"
            android:layout_height="203dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:srcCompat="@drawable/college" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="166dp"
            android:layout_height="189dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="148dp"
            android:text="I completed my Intermediate in Science (April 2018 from Punjab College Satellite-town Gujranwala) in Fsc Pre Engineering and decided to move ireland for Higher studies."
            android:textAlignment="center"
            android:background="#66000000"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.18"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="351dp"
            android:layout_height="187dp"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:srcCompat="@drawable/dorset_college" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="106dp"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:text="School"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="109dp"
            android:layout_height="43dp"
            android:layout_marginTop="116dp"
            android:text="College"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="228dp"
            android:layout_height="40dp"
            android:layout_marginTop="56dp"
            android:text="College/University"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="352dp"
            android:layout_height="127dp"
            android:layout_marginTop="16dp"
            android:background="#66000000"
            android:text="I arrived in Ireland in 2020 and I got erolled for Bachelor in Computing from Dorset College as my goal is to be a software developer, so I started my journey to Technical field to achieve my goals which I'm passionate about. I'm still on way to my goal, which i hope will be achieved very soon."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>




