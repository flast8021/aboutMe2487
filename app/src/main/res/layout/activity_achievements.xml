<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="-1dp"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        tools:context=".education_activity">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="197dp"
            android:layout_height="162dp"
            android:layout_marginTop="24dp"
            android:text="As of my intrest and curiosity of how networks work, i choosed CCNA as it includes all the basics and indepth knowledge of networks which has proven so khelpful and full of knowledge for me."
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="#66000000"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.174"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/copyright"
            android:layout_width="407dp"
            android:layout_height="53dp"
            android:background="#53789F"
            android:text="&#169; Copyright Usman Zia 2022\nBuilt With Android Studio"
            android:textAlignment="center"
            android:textColor="#adb5bd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.857"
            tools:ignore="MissingConstraints,TextContrastCheck" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="214dp"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:text="CCNA Certification"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="183dp"
            android:layout_height="46dp"
            android:layout_marginTop="44dp"
            android:text="Linux Essential"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="165dp"
            android:layout_height="178dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.152"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            app:srcCompat="@drawable/linux" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="177dp"
            android:layout_height="177dp"
            android:layout_marginTop="28dp"
            android:background="#66000000"
            android:text="I also did my linux essential course from netacad, as I didn't had any experience with linux, so that i don't face any problems working with Linux i decided to go with linux essential course."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.932"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="191dp"
            android:layout_height="53dp"
            android:layout_marginTop="40dp"
            android:text="Bsc in Computing"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.469"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="200dp"
            android:layout_height="161dp"
            android:layout_marginTop="32dp"
            android:background="#66000000"
            android:text="So far I've achieved 2 years of my Computing degree, from dorset college dublin, I've learned and achieved many things from this institue, and I'm still on journey of knowledge and sucess with this college."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="145dp"
            android:layout_height="131dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.911"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView23"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="72dp"
            android:backgroundTint="#53789F"
            android:text="Home"
            app:layout_constraintBottom_toTopOf="@+id/copyright"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.944"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView13"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/buttonHobbiesHome"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="56dp"
            android:backgroundTint="#53789F"
            android:text="Hobbies"
            app:layout_constraintBottom_toTopOf="@+id/copyright"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="172dp"
            android:layout_height="185dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19"
            app:srcCompat="@drawable/ccna" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>