<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="-1dp"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        tools:context=".education_activity">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="97dp"
            android:layout_height="52dp"
            android:layout_marginTop="44dp"
            android:text="Travelling"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="130dp"
            android:layout_height="43dp"
            android:text="Learning"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="315dp"
            android:layout_height="116dp"
            android:layout_marginTop="28dp"
            android:textAlignment="center"
            android:background="#66000000"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="My Favourit hobby is learning I like to spend my free time in learning new things specially related to progrmming , Recently I've started learning Ruby and Kotlin, which are very popular in software and app development field."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:srcCompat="@drawable/programming_image" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="360dp"
            android:layout_height="189dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.456"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:srcCompat="@drawable/travel_image" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="312dp"
            android:layout_height="93dp"
            android:layout_marginTop="28dp"
            android:background="#66000000"
            android:text="Another Hobby of mine is to travel new places, I like exploring new places and new cultures, new way of like. I travel alot and i really enjoy travelling."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView10" />

        <TextView
            android:id="@+id/copyright"
            android:layout_width="407dp"
            android:layout_height="53dp"
            android:layout_marginTop="140dp"
            android:background="#53789F"
            android:text="&#169; Copyright Usman Zia 2022\nBuilt With Android Studio"
            android:textAlignment="center"
            android:textColor="#adb5bd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            tools:ignore="MissingConstraints,TextContrastCheck" />

        <Button
            android:id="@+id/buttonAchievementsII"
            android:layout_width="180dp"
            android:layout_height="48dp"

            android:backgroundTint="#53789F"
            android:text="Achievements"
            app:layout_constraintBottom_toTopOf="@+id/copyright"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.932"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintVertical_bias="0.611" />

        <Button
            android:id="@+id/buttonSkillsHome"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:backgroundTint="#53789F"
            android:text="Skills"
            app:layout_constraintBottom_toTopOf="@+id/copyright"
            app:layout_constraintEnd_toEndOf="@+id/copyright"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="@+id/copyright"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintVertical_bias="0.612" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
